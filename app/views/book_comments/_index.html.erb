<table>
            <% books.book_comments.each do |book_comment| %>
            <tr>
            <td>
            <%=link_to user_path(user.id) do %>
            <%= image_tag books.user.get_profile_image(80,80) %>
            <br>
            <%= book_comment.user.name %>
            <%end%>
            </td>  
            <td><%= book_comment.created_at.strftime('%Y/%m/%d') %><%= book_comment.comment %></td>
            <td>
            <% if book_comment.user == current_user %>
            <%= link_to "削除", book_book_comment_path(book_comment.book, book_comment), method: :delete,remote: true,class: "btn-sm btn-danger"  %>
           <% end %>
           </td>
          </tr>
       <% end %>
     </table>