<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Title</th>
            <th>Opinion</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody id="book">
    <% books.each do |book| %>
      <tr>
        <td><%= book.user.name %></td>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book),class: "btn btn-sm btn-info" %></td>
        <% if book.user == current_user %>
          <td><%= link_to "edit", edit_book_path(book),class: "btn btn-sm btn-success" %></td>
          <td><%= link_to "Destroy", book_path(book), method: :delete, remote: true , class: "btn btn-sm btn-danger", "data-confirm" => "Are you sure?"%></td>
        <% else %>
          <td></td>
          <td></td>
        <% end %>
      </tr>
    <% end %>
    </tbody>
</table>