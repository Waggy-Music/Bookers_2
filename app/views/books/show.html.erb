<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
     <%=render'users/userinfo',user: @user,book: @book%>
    </div>
    
    <div class= "col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        
        
          <tr>
            <td>
              <%=link_to user_path(@user.id) do %>
              <%= image_tag @books.user.get_profile_image(100,100) %>
              <br>
              <%= @books.user.name%>
               <%end%>
            </td>
            <td>
              <%=link_to @books.title, book_path(@books.id)%>
            </td>
            <td>
              <%=@books.body%>
            </td>
               
            <td>
              <% if @books.favorited_by?(current_user)%>
              <%= link_to book_favorites_path(@books),method: :delete do%>
              ❤️<%= @books.favorites.count%>
              <%end%>
              </td>
              <%else%>
            <td>
              <%= link_to book_favorites_path(@books),method: :post do%>
              ♡<%= @books.favorites.count%>
              <%end%>
            <%end%>
            </td>
            <td>
            <p>コメント件数：<%= @books.book_comments.count %></p>
            </td>
            </tr>
            <tr>
            <td><% @books.book_comments.each do |book_comment| %>
            <p><%= image_tag book_comment.user.get_profile_image(100,100) %></p>
            <%= book_comment.user.name %>
            <%= book_comment.created_at.strftime('%Y/%m/%d') %><%= book_comment.comment %>
            <% if book_comment.user == current_user %>
            <%= link_to "削除", book_book_comment_path(book_comment.book, book_comment), method: :delete %>
           <% end %>
           <% end %>
           </td>
           
           
            <td>
            <%= form_with model: [@books,@book_comment] do |f| %>
            <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
            <%= f.submit "送信する" %>
            <% end %>
            
            
            
            </td>  <!--コメントが出る時、book自体の編集と削除ボタンは必要か？-->
            
            <% if @books.user==current_user%>
            <td><%=link_to "Edit",edit_book_path(@books.id),class: "btn btn-sm btn-success" %>
            </td> 
            <td>
            <%=link_to "Destroy",book_path(@books.id), method: :delete, class: "btn btn-sm btn-danger", "data-confirm" => "Are you sure?"%>
            </td>
            <%end%>
            
          </tr>
        
      </table>
    </div>
   </div>
</div>   

