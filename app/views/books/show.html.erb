<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
     <%=render'users/userinfo',user: @user,book: @book%>
    </div>
    
    <div class= "col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        
        
          <tr>
            <td>
              <%=link_to user_path(@user.id) do %>
              <%= image_tag @books.user.get_profile_image(100,100) %>
              <br>
              <%= @books.user.name%>
            </td>
            <td>
              <%=link_to @books.title, book_path(@books.id)%>
            </td>
            <td>
              <%=@books.body%>
            </td>
            <% if @books.user==current_user%>
            <td><%=link_to "Edit",edit_book_path(@books.id),class: "btn btn-sm btn-success" %>
            </td> 
            <td>
            <%=link_to "Destroy",book_path(@books.id), method: :delete, class: "btn btn-sm btn-danger", "data-confirm" => "Are you sure?"%>
            </td>
            <%end%>
            <%end%>
          </tr>
        
      </table>
    </div>
   </div>
</div>   

