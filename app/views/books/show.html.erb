<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
     <%=render'users/userinfo',user: @user,book: @book%>
    </div>
    
    <div class= "col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        
        
          <tr>
            <td><%=link_to user_path(@user.id) do %>
              <%= image_tag @books.user.get_profile_image(80,80) %><br>
              <%= @books.user.name%>
              <%end%>
            </td>
            <td><%=link_to @books.title, book_path(@books.id)%></td>
            <td><%=@books.body%></td>
            <td>コメント件数：<%= @books.book_comments.count %></td>
            <td>
              <% if @books.favorited_by?(current_user)%>
              <%= link_to book_favorites_path(@books),method: :delete do%>
              ❤️<%= @books.favorites.count%>
              <%end%>
              
              <%else%>
            
              <%= link_to book_favorites_path(@books),method: :post do%>
              ♡<%= @books.favorites.count%>
              <%end%>
              <%end%>
            </td>
            <% if @books.user==current_user%>
             <td><%=link_to "Edit",edit_book_path(@books.id),class: "btn btn-sm btn-success" %></td> 
             <td><%=link_to "Destroy",book_path(@books.id), method: :delete, class: "btn btn-sm btn-danger", "data-confirm" => "Are you sure?"%>
             </td>
            <%end%>
            </tr>
          </table>
          
          <table>
            <% @books.book_comments.each do |book_comment| %>
            <tr>
            <td>
            <%=link_to user_path(@user.id) do %>
            <%= image_tag @books.user.get_profile_image(80,80) %>
            <br>
            <%= book_comment.user.name %>
            <%end%>
            </td>  
            <td><%= book_comment.created_at.strftime('%Y/%m/%d') %><%= book_comment.comment %></td>
            <td>
            <% if book_comment.user == current_user %>
            <%= link_to "削除", book_book_comment_path(book_comment.book, book_comment), method: :delete,class: "btn-sm btn-danger"  %>
           <% end %>
           </td>
          </tr>
       <% end %>
     </table>
           
            <div>
            <%= form_with model: [@books,@book_comment] do |f| %>
            <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに",class:"w-100" %>
            <%= f.submit "送信する" %>
            <% end %>
            </div>  <!--コメントが出る時、book自体の編集と削除ボタンは必要か？-->
            
            
            </tr>
        
      
    </div>
   </div>
</div>   

