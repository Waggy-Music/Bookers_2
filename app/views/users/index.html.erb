<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <!--% if @user==current_user%-->
      <%=render'userinfo',user: @users,book: @book%>
    </div>
      <div class= "col-md-8 offset-md-1">
      <table class="table">
        <h2>Users</h2>
       <tr>
       <th>image</th>
       <th>name</th>
       <th></th>
       </tr>
       <tr>
       <% @user.each do |user| %>
       <td><%= image_tag user.get_profile_image(100,100) %></td>
       <td><%=user.name%></td>
       <td><%=link_to "Show",user_path(user.id),class: "btn btn-sm btn-primary" %></td> 
       <%end%>
       <td><% if current_user.following?(@users) %>
  <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete %>
<% else %>
  <%= link_to "フォローする", user_relationships_path(user.id), method: :post %>
<% end %></td>
       <td></td>
       </tr>
       
      </table>
     </div>
    
  </div>
</div>
