<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3", style="position: static;">
      <!--% if @user==current_user%-->
      <%=render'userinfo',user: @users,book: @book%>
    </div>
      <div class= "col-md-8 offset-md-1">
      <table class="table">
        <h2>Users</h2>
       <tr>
       <th>image</th>
       <th>name</th>
       <th></th>
       </tr>
       
       <% @user.each do |user| %>
       <tr>
       <td><%= image_tag user.get_profile_image(100,100) %></td>
       <td><%=user.name%></td>
       <td>フォロワー数:<%= user.followings.count %></td>
       <td>フォロワー:<%= user.followers.count %></td>
       <td><%=render "follow",user: user%></td>
       <td><%=link_to "Show",user_path(user.id),class: "btn btn-sm btn-primary" %></td> 
       <td></td>
       </tr>
       <%end%>
      </table>
     </div>
    
  </div>
</div>
